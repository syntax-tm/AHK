{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AutoHotkey Debug",
            "type": "autohotkey",
            "request": "launch",
            "program": "${file}",
            "args": []
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch (current file)",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "name": "PowerShell: Open-GameDirectory",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/Open-GameDirectory.ps1",
            "args": [ "\"Resident Evil 6\"" ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
